{
"version" : 1,

    "use_persistense" : true,
     "logger" :
    {
	    "type" : "STDOUT_LOGGER",
	    "flags" : "PLOG_INFO | PLOG_WARNING | PLOG_ERROR | PLOG_INTRO"
    },
    "persistent_storage" : {
            "eblob_path" : "/tmp/eblobs",
            "blob_size" : 2048,
            "sync_interval" : 0,
            "thread_pool_size" : 4,
            "defrag_timeout" : 600
   },
	"services" :
	{
		"hello" : {
				"app" : "hello@1",
				"autodiscovery" : {
					"type" : "FILE",
					"source" : "/home/noxiouz/hosts"
				},
					"policy" : {
					"urgent" : 0,
					"deadline" : 4.0,
					"timeout" : 10.000,
					"max_retries" : -1,
                    "persistent" : true
					}
		}			
	}
}
